.nav
	width: 600px
	margin: 0 auto
	&__menu
		width: 100%
		display: flex
		justify-content: space-around
	&__item
		width: 100%
		height: 50px
		padding-top: 25px
		box-sizing: padding-box
		text-align: center
		position: relative
		background-color: blue
	&__link
		&:active
		&:hover
		&:visited
		&:link
			color: #fff
	&__item &__menu
		display: flex
		flex-direction: column
		opacity: 0
		position absolute
		top: 50px
		left: 0
		z-index: -1
		transition-duration: 1s

	&__item &__menu &__menu
		top: 0
		left: 100%

	 &__item:hover > &__menu
		opacity: 1
		z-index: 1000
		transition-duration: 1s